<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_3"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_margin="@dimen/grid_layout_margin">

            <androidx.cardview.widget.CardView
                android:id="@+id/vaci_cale_card_id"
                style="@style/CardViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="@dimen/card_elevation"
                app:cardCornerRadius="@dimen/card_corner_radius"
                android:clickable="true"
                android:focusable="true"
                app:layout_gravity="fill"
                android:layout_margin="@dimen/card_view_margin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/vaci_card_heigt"
                    android:gravity="center"
                    android:padding="@dimen/card_view_padding"
                    android:background="@drawable/card_corner"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/vaci_image_width"
                        android:layout_height="@dimen/vaci_image_height"
                        android:background="@drawable/vaci_6">
                    </ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/text_content_margin_top"
                        android:text="CALENDÁRIO"
                        android:textSize="@dimen/item_title_size"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:gravity="center">
                    </TextView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/vaci_info_card_id"
                style="@style/CardViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="@dimen/card_elevation"
                app:cardCornerRadius="@dimen/card_corner_radius"
                android:clickable="true"
                android:focusable="true"
                app:layout_gravity="fill"
                android:layout_margin="@dimen/card_view_margin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/vaci_card_heigt"
                    android:padding="@dimen/card_view_padding"
                    android:gravity="center"
                    android:background="@drawable/card_corner"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/vaci_image_width"
                        android:layout_height="@dimen/vaci_image_height"
                        android:background="@drawable/vaci_6">
                    </ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/text_content_margin_top"
                        android:text="INFORMAÇÕES"
                        android:textSize="@dimen/item_title_size"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:gravity="center">
                    </TextView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/vaci_minh_card_id"
                style="@style/CardViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="@dimen/card_elevation"
                app:cardCornerRadius="@dimen/card_corner_radius"
                android:clickable="true"
                android:focusable="true"
                app:layout_gravity="fill"
                android:layout_margin="@dimen/card_view_margin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/vaci_card_heigt"
                    android:gravity="center"
                    android:padding="@dimen/card_view_padding"
                    android:background="@drawable/card_corner"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/vaci_image_width"
                        android:layout_height="@dimen/vaci_image_height"
                        android:background="@drawable/vaci_6">
                    </ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/text_content_margin_top"
                        android:text="MINHAS VACINAS"
                        android:textSize="@dimen/item_title_size"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:gravity="center">
                    </TextView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>