<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Puberdade.Menina.ChangeActivity"
    android:background="@drawable/fundoaltcut2">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="@dimen/grid_layout_margin">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_content_margin_top"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="PRINCIPAIS MUDANÇAS NO CORPO DAS MENINAS"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="@dimen/text_content_margin_top"
            android:textColor="@color/black"
            android:text="Toque em cada ponto e identificará as alterações que acontecem no corpo da menina durante a puberdade."/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_content_margin_top"
            android:background="@drawable/pub_menina"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="@dimen/text_content_margin_top"
            android:textColor="@color/black"
            android:text="Toque em cada ponto e conhecerá um pouco sobre cada parte do órgão genital feminino."/>

    </androidx.appcompat.widget.LinearLayoutCompat>

</ScrollView>